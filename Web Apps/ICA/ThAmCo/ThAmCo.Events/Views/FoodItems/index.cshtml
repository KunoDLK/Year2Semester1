@model IEnumerable<ThAmCo.Catering.Data.FoodItem>

@{
    ViewData["Title"] = "FoodItems";
}

<h1>FoodItems</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.FoodItemId)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Description)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.UnitPrice)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.FoodItemId)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Description)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.UnitPrice)
            </td>
            <td>
                    @Html.ActionLink("Edit", "Edit", new {foodItemId=item.FoodItemId}) |
                    @Html.ActionLink("Delete", "Delete", new {foodItemId=item.FoodItemId})
            </td>
        </tr>
}
    </tbody>
</table>
