@model EventDetails;

@*
    For more information on enabling MVC for empty projects, visit https://go.microsoft.com/fwlink/?LinkID=397860
*@
@{
    <h1>
        Event information:
    </h1>
    <h2>
        Name: @Model.Event.Name
    </h2>
    <h2>
        Date: @Model.Event.StartTime.ToString("dd/MM/yyyy")
    </h2>
    <h2>
        Start Time: @Model.Event.StartTime.ToString("hh:mm")
    </h2>
    <h2>
        End Time: @Model.Event.EndTime.ToString("hh:mm")
    </h2>
    <div>
        Guests
    </div>
    <div>
        <select id="MenuSelector">
            <option value="null">-- Select --</option>
            @if (Model.Menus != null)
            {     
                @foreach (var menu in Model.Menus)
                {
                    <option value="@menu.Key">@menu.Value</option>
                }
            }
        </select>

        <table class="table">
            <thead>
                <tr>
                    <td>Name</td>
                    <td>Price</td>
                </tr>
            </thead>
            @if (Model.Menu != null)
            {
                <tbody id="@($"SelectedMenu{Model.Menu.MenuId}")" data-id="@Model.Menu.MenuId">
                </tbody>
            }
            else
            {
                <tbody id="@($"SelectedMenu")">
                </tbody>
            }
        </table>
    </div>
    <div>
        Staffing
    </div>
}

@section Scripts
{
    <script type="text/javascript" src="~/js/MenuLoader.js"></script>
}