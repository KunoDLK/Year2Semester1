@model ThAmCo.Events.Data.Menu

@{
    ViewData["Title"] = "View";
}

<h1>View</h1>

<h4>Menu</h4>

<div class="col-4">
    <form asp-action="Submit">
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        <div class="form-group">
            <input type="hidden" asp-for="MenuId" class="form-control" />
        </div>
        <div class="form-group">
            <label asp-for="MenuName" class="control-label"></label>
            <input asp-for="MenuName" class="form-control" />
            <span asp-validation-for="MenuName" class="text-danger"></span>
        </div>
        <div class="form-group">
            <input type="submit" value="Submit" class="btn btn-primary" />
        </div>
    </form>
</div>

<table class="table">
    <thead>
        <tr>
            <td>Assinged to Menu</td>
            <td>Name</td>
            <td>Price</td>
        </tr>
    </thead>
    <tbody id="@($"Menu")" data-id="@Model.MenuId">
    </tbody>
</table>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    <script type="text/javascript" src="~/js/MenuEditor.js"></script>
}
